{
  "compilerOptions": {
    "lib": ["es2023"],

    "module": "node16",

    "target": "es2022",

    "strict": true,

    "esModuleInterop": true,

    "skipLibCheck": true,

    "noImplicitAny": true,

    "preserveConstEnums": true,

    "allowSyntheticDefaultImports": true,

    "rootDir": "src/",
    "outDir": "dist/"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts"]
}
