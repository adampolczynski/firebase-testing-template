{
  "name": "firebase-testing-template",
  "package-name": "firebase-testing-template",
  "version": "1.0.0",
  "displayName": "Firebase functions & firestore testing template",
  "description": "Template presenting a way to test firebase firestore and functions using emulators",
  "keywords": [
    "firebase-tests",
    "firebase-testing",
    "firebase-testing-template",
    "tests",
    "jest",
    "firebase",
    "firebase-emulators-testing",
    "firebase-emulators"
  ],
  "main": "./dist/index.js",
  "author": {
    "name": "Adam Połczyński <adam_polczynski@yahoo.com>"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc && cp -rf ./src/html-templates ./dist/",
    "start": "npm run build && npx dotenvx run -- firebase emulators:start",
    "build:watch": "cp -rf ./src/html-templates ./dist/ && tsc --watch",
    "test": "npm run build && firebase emulators:exec \"jest\"  --only functions",
    "functions:logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.17.0",
    "dotenv": "^16.4.5",
    "easy-busboy": "^1.2.0",
    "express": "^4.21.1",
    "firebase": "^10.14.1",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^6.0.1",
    "form-data": "^4.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.4",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adampolczynski/firebase-testing-template.git"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
